<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="de.stefan_oltmann.falling_blocks" android:versionName="0.3.5" android:versionCode="8">
      
    <!-- Unterstützung für alle Display-Größen angeben.
         Erst ab API Version 4 wird z.B. das HTC Wildfire unterstützt.
         Auf diesem soll das Spiel auch laufen. -->
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4"/>
    
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:allowClearUserData="true">
        <activity android:name=".SpielActivity"
                  android:label="@string/app_name" 
                  android:screenOrientation="portrait">
            <intent-filter>
                <action   android:name="android.intent.action.MAIN"       />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest> 